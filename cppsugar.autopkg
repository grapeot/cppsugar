nuget{
    nuspec{
        id = cppsugar;
        version: 0.0.3;
        title: "C++ Syntax Sugar Library";
        authors: {Yan Wang};
        owners: {Yan Wang};
        projectUrl: "https://github.com/grapeot/cppsugar";
        requireLicenseAcceptance: false;
